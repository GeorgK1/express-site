html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Document
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')
    script(src='https://kit.fontawesome.com/c9ed11742c.js' crossorigin='anonymous')
    link(rel='stylesheet' href='stylesheets/style.css')
    include head.pug
    
  body
    .container-sm
    .row
      #carouselExampleControls.carousel.slide(data-bs-ride='carousel')
        .carousel-inner
          .carousel-item.active
            img.d-block.w-100(src='images/first.jpg' alt='...')
          .carousel-item
            img.d-block.w-100(src='images/second.jpg' alt='...')
          .carousel-item
            img.d-block.w-100(src='images/fifth.jpg' alt='...')
        button.carousel-control-prev(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='prev')
          span.carousel-control-prev-icon(aria-hidden='true')
          span.visually-hidden Previous
        button.carousel-control-next(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='next')
          span.carousel-control-next-icon(aria-hidden='true')
          span.visually-hidden Next
    .row
      .col-sm-6.top-0.start-100.bg-light.border.rounded
        p.text-center.lead.quote-text
          | Reliable and free repair quote
      .col-md-6.top-0.bg-light.border.rounded
        p.text-center.lead.quote-text
          | Attractive promotional offers
      .col.bg-light.border.rounded
        p.text-center.lead.quote-text
          | Friendly staff and a nice atmosphere
    .row
      .col-md-6
        figure#quote-text.text-center.vertical-align
          blockquote.blockquote
            p
              | "If you want good service, come to this car workshop."
              | - Satisfied customer
      .col
        img.img-fluid(src='images/thumb.jpg' alt='satisfied customer')

    footer
      include footer.pug
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js' integrity='sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js' integrity='sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT' crossorigin='anonymous')
